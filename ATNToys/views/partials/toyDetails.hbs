<style>
    body {
        font-family: 'open sans';
        overflow-x: hidden;
        border: 1px solid #dddd;
        border-radius: 50px;
    }

    img {
        max-width: 100%;
    }

    .card {
        margin-top: 50px;
        background: white;
        padding: 3em;
        line-height: 1.5em;
        font-size: 20px;
    }

    .product-title,
    .price,
    .sizes,
    .colors {
        text-transform: UPPERCASE;
        font-weight: bold;
    }

    .checked,
    .price span {
        color: #ff9f1a;
    }
</style>


<div class="preview_main">
    <div class="preview_content">
        <!-- Begin New Product -->
        <div class="preview_top">
            <div class="clear"></div>
        </div>
    </div>
    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1">
                                <a href="">
                                    <img src="images/{{product.image}}"></a>
                            </div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">{{product.name}}</h3>
                        <h4 class="price">Price: {{product.price}} <span>$</span></h4>
                        <p class="product-description">Toy details: </p>
                        <p class="product-description"> {{product.description}}</p>
                        <div class="buy">
                        </div>
                    </div>
                </div>
            </div>
        </div>